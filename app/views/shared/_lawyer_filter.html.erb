<div class="filter-lawyers">
  <%= form_tag lawyers_path, method: :get, class: "input-form" do %>
  <%= select_tag :is_online, options_for_select([["online",true],["offline",false]]), prompt: "Online/Offline" %>
  <%= text_field_tag :min_price, params[:min_price], class: "form-center", placeholder: "min price" %>
  <%= text_field_tag :max_price, params[:max_price], class: "form-center", placeholder: "max price" %>
  <%= select_tag :category, options_for_select(@categories_names), prompt: "Category" %>
  <%= submit_tag("filter", :id=>"button-resize", :class=>"btn-medium", :name=>"submit") %>
  <% end %>
</div>
