<div class="filter-lawyers">
  <%= form_tag lawyers_path, method: :get, class: "input-form" do %>
  <%= select_tag :is_online, options_for_select([["online",true],["offline",false]]), prompt: "Online/Offline" %>
  <%= text_field_tag :min_price, params[:min_price], class: "form-center", placeholder: "min price" %>
  <%= text_field_tag :max_price, params[:max_price], class: "form-center", placeholder: "max price" %>
  <%= select_tag :category, options_for_select(@categories_names), prompt: "Category" %>
  <%= submit_tag("filter", :id=>"button-resize", :class=>"btn-medium", :name=>"submit") %>
  <% end %>
</div>

<div class="lawyers-container">
  <div class ="search-results">
    These are the lawyers we found for you:
  </div>
  <% @lawyers.each do |lawyer| %>
  <%= link_to lawyer_path(lawyer), :action => 'go' do %>

  <div class="lawyer-card">
    <div>
      <%=  image_tag(lawyer.photo, class: 'lawyer-avatar') %>
    </div>
    <div class="lawyer-decription">
      <h5><%= lawyer.user.first_name.capitalize + " " + lawyer.user.last_name.capitalize %></h5>
      <ul>
        <li><%= truncate(lawyer.description, :length => 35) %></li>
        <li><i class="fas fa-euro-sign"></i> Price per hour: â‚¬<%= lawyer.hourly_rate %></li>
        <% if lawyer.is_first_consultation_free %>
        <li><i class="fas fa-handshake"></i> First consultation is free!</li>
        <% end %>
      </ul>
    </div>
    <% if lawyer.is_online  %>
    <div class="online-circle">
    </div>
    <% end  %>

  </div>
  <% end %>
  <% end %>
</div>
