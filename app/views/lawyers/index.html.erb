<%= render 'shared/lawyer_filter' %>
<div class="container">
  <div class="lawyers-container">
    <div class ="search-results">
      <h5>Who can help you:</h5>
    </div>
    <% if params[:category] == "All categories" %>
      <%= render 'lawyer_cards' %>
    <% elsif @search_result.empty? %>
      <div class="no-matching-result">
      <p>Sorry, we do not have any matching lawyers for your search request. <i class="far fa-frown"></i></p>
      </div>
    <% else %>
      <%= render 'lawyer_cards' %>
    <% end %>
  </div>
</div>

